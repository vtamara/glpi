{% set users_id = (item.fields['users_id_recipient'] > 0 ? item.fields['users_id_recipient'] : 0) %}

<div class="timeline-item mb-4 ITILContent"
     data-itemtype="{{ item.getType() }}" data-items-id="{{ item.fields['id'] }}">
   <div class="row">
      <div class="col-auto d-flex flex-column ">
         {% include "components/itilobject/user_picture.html.twig" with {'users_id': users_id} only %}
      </div>
      <div class="col-12 col-sm">
         <div class="d-flex">
            <div class="d-none d-md-block">
               <strong>{{ User__getLink(users_id) }}</strong>
            </div>
            <div class="text-muted ms-2 d-flex">
               {% set date_creation = item.fields['date_creation'] ?? item.fields['date'] %}
               {% set date_mod = item.fields['date_mod'] %}
               <span title="{{ convDateTime(date_creation) }}">
                  {{ __('Created: %1$s')|format(time2str(date_creation))|raw }}
               </span>

               {% if date_creation != date_mod%}
                  {% set editor = User__getLink(item.fields['users_id_lastupdater']) %}
                  <span class="text-muted text-end ms-2 d-none d-md-block" title="{{ convDateTime(date_mod) }}">
                     {{ __('Last modification: %1$s by %2$s')|format(time2str(date_mod), editor)|raw }}
                  </span>
               {% endif %}
            </div>

            {# TODO canedit #}
            <div class="dropdown ms-auto">
               <button class="btn btn-sm btn-ghost-secondary" type="button" id="more-actions" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa fa-ellipsis-h"></i>
               </button>
               <ul class="dropdown-menu" aria-labelledby="more-actions">
                  <li><a class="dropdown-item edit-timeline-item" href="#">
                     <i class="fas fa-fw fa-edit"></i>
                     <span>{{ __("Edit") }}</span>
                  </a></li>
               </ul>
            </div>
         </div>
         <span class="row mt-2 timeline-content left card">
            <div class="card-body">
               <div class="read-only-content">
                  <div class="card-title card-header mx-n3 mt-n3">
                     {{ item.fields['name'] }}
                  </div>
                  {{ getHtmlToDisplay(item.fields['content']) }}
               </div>
               <div class="edit-content collapse">
                  <button class="btn btn-sm btn-ghost-secondary float-end close-edit-content">
                     <i class="fas fa-2x fa-times"></i>
                  </button>
                  <div class="ajax-content">

                  </div>
               </div>
            </div>
         </span>
      </div>
   </div>
</div>

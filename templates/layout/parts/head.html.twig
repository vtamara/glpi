<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
   <title>GLPI - {{ title }}</title>

   <meta charset="utf-8" />

   {# prevent IE to turn into compatible mode... #}
   <meta http-equiv="X-UA-Compatible" content="IE=edge" />

   {# auto desktop / mobile viewport #}
   <meta name="viewport" content="width=device-width, initial-scale=1" />

   {% for css_file in css_files %}
      <link rel="stylesheet" type="text/css" href="{{ css_path(css_file) }}" />
   {% endfor %}

   {{ custom_css() }}

   <link rel="shortcut icon" type="images/x-icon" href="{{ asset_path('/pics/favicon.ico') }}" />

   {% for js_file in js_files %}
      <script type="text/javascript" src="{{ js_path(js_file) }}"></script>
   {% endfor %}

   {{ locales_js() }}
</head>

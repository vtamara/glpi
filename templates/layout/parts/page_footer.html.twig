            </main> {# #page #}
         </div> {# .container-fluid #}
      </div> {# .content #}
   </div> {# .page #}

   <div class="floating-buttons d-inline-flex">
      <span class="btn btn-secondary d-none me-1" id="backtotop">
         <i class="fas fa-arrow-up" title="{{ __('Back to top of the page') }}">
            <span class="visually-hidden">{{ __("Top of the page") }}</span>
         </i>
      </span>

      {% if is_debug_active %}
         <span class="btn btn-danger d-none d-md-block" id="see_debug">
            <i class="fas fa-bug" title=" {{ __('Display GLPI debug informations') }}">
               <span class="visually-hidden">{{ __('Display GLPI debug informations') }}</span>
            </i>
         </span>
         <script type="text/javascript">
            $($('#see_debug').click(function(e) {
               e.preventDefault();
               $('body > .debug-panel').css('display', 'block');
            }));
         </script>
      {% endif %}
   </div>

   {% if config('maintenance_mode') %}
      <div id='maintenance-float'>
         <a href="{{ path("front/config.form.php?forcetab=Config$5") }}">GLPI MAINTENANCE MODE</a>
      </div>
   {% endif %}

   {% for js_file in js_files %}
      <script type="text/javascript" src="{{ js_path(js_file) }}"></script>
   {% endfor %}

</body>
</html>
